<Page x:Class="KrylovaCollege.View.Pages.AddGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KrylovaCollege.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="AddGroupPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="100" />
            <RowDefinition Height="80" />
            <RowDefinition Height="100" />
            <RowDefinition Height="80" />
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Введите группу" Grid.Row="1" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Выберите специальность" Grid.Row="3" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="GroupTb" Grid.Row="1" Grid.Column="2" Margin="20"/>
        <ComboBox Name="SpecialCmb" Grid.Row="3" Grid.Column="2" Margin="20"/>
        <Button Name="AddBtn" Content="Добавить" Grid.Row="5" Grid.Column="2" FontSize="30" Margin="20" Click="AddBtn_Click"/>
    </Grid>
</Page>
