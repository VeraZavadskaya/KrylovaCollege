<Page x:Class="KrylovaCollege.View.Pages.Report1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KrylovaCollege.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="Report1Page">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="100" />
            <RowDefinition Height="200" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите начало периода" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Выберите конец периода" Grid.Column="2" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Выберите группу" Grid.Row="2" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DatePicker Name="DateStartDp" Grid.Row="1" Width="300"/>
        <DatePicker Name="DateFinishDp" Grid.Row="1" Grid.Column="2" Width="300"/>
        <ComboBox Name="GroupCmb" Grid.Column="2" Grid.Row="2" Margin="100 10"/>

        <ListView Name="ReportLv" Grid.Row="4" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата"
                                    DisplayMemberBinding="{Binding DateEvent, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Группа"
                                    DisplayMemberBinding="{Binding Group.Name}"/>
                    <GridViewColumn Header="Спецаильность"
                                    DisplayMemberBinding="{Binding Group.Special.Name}"/>
                    <GridViewColumn Header="Активность"
                                    DisplayMemberBinding="{Binding Activity.Name}"/>
                    <GridViewColumn Header="Направление"
                                    DisplayMemberBinding="{Binding Activity.Direction.Name}"/>
                    <GridViewColumn Header="Балл"
                                    DisplayMemberBinding="{Binding Mark}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button Name="ChooseBtn" Content="Выбрать" Grid.Row="7" FontSize="30" Margin="30 10" Click="ChooseBtn_Click"/>
        
    </Grid>
</Page>
